{
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    "outDir": "./dist/esm",
    "strict": true,
    "noUnusedLocals": true,
    "declaration": true,
    "allowSyntheticDefaultImports": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "allowJs": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ES2022",
    "pretty": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "esModuleInterop": false
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": [
    "src/**/*", "jest.config.ts"
  ]
}
